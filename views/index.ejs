<%- include('header') -%>

<%- include('links') -%>
<body class="bodyStyle">
    <h1>Standings</h1>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-8">
                <table class="dataTable">
                    <thead>
                        <th>Team</th>
                        <th>Rating</th>
                        <th>Wins</th>
                        <th>Losses</th>
                        <th>Points For</th>
                        <th>Points Against</th>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < teamList.length; i++) { %>
                            <tr>
                                <td><a href='/team/?teamID=<%= teamList[i].id %>'><%= teamList[i].team_name %></a></td>
                                <td><%= teamList[i].team_rating %></td>
                                <td><%= teamList[i].wins %></td>
                                <td><%= teamList[i].losses %></td>
                                <td><%= teamList[i].points_for %></td>
                                <td><%= teamList[i].points_against %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>