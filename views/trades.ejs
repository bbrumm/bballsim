<%- include('header') -%>

<%- include('links') -%>
<script>
    function updateProposedTradeYourTeam(control) {
        document.getElementById("yourPlayer").innerHTML = control.value;
        //control.closest('tr').style.backgroundColor = 'red';
    }

    function updateProposedTradeChosenPlayer(control) {
        document.getElementById("chosenPlayer").innerHTML = control.value;
    }


</script>
<body class="bodyStyle">
    <h1>Trades</h1>
    <form class="" action="/trade_submitted" method="post" name="tradeSubmitted" id="tradeSubmitted">
        <div class="row justify-content-center">
            <div class="col-8">
                <h2>Proposed Trade</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <p>Your Player:</p>
                <p id="yourPlayer">none selected</p>
            </div>
            <div class="col-4">
                <p>Chosen Player:</p>
                <p id="chosenPlayer">none selected</p>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-6">
                <h2>Your Team</h2>
                <table class="dataTable">
                    <thead>
                        <th></th>
                        <th>Player Name</th>
                        <th>Overall Rating</th>
                        <th>Salary</th>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < playerDetailsForTeam.length; i++) { %>
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                        type="radio" 
                                        name="radioPlayerYourTeam" 
                                        id="rdTrade<%= playerDetailsForTeam[i].id %>" 
                                        value="<%= playerDetailsForTeam[i].first_name %> <%= playerDetailsForTeam[i].last_name %>" 
                                        onclick="updateProposedTradeYourTeam(this)">
                                    </div>
                                </td>
                                <td><a href='/player/?playerID=<%= playerDetailsForTeam[i].id %>'><%= playerDetailsForTeam[i].first_name %> <%= playerDetailsForTeam[i].last_name %></a></td>
                                <td><%= playerDetailsForTeam[i].rating_ovr %></td>
                                <td><%= playerDetailsForTeam[i].annual_salary %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <div class="col-6">
                <h2>Open to Trade</h2>
                <table class="dataTable">
                    <thead>
                        <th></th>
                        <th>Player Name</th>
                        <th>Overall Rating</th>
                        <th>Team Name</th>
                        <th>Salary</th>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < playersOpenToTrade.length; i++) { %>
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                        type="radio" 
                                        name="radioPlayerOpen" 
                                        id="rdOpen<%= playersOpenToTrade[i].id %>" 
                                        value="<%= playersOpenToTrade[i].first_name %> <%= playersOpenToTrade[i].last_name %>" 
                                        onclick="updateProposedTradeChosenPlayer(this)">
                                    </div>
                                </td>
                                <td><a href='/player/?playerID=<%= playersOpenToTrade[i].id %>'><%= playersOpenToTrade[i].first_name %> <%= playersOpenToTrade[i].last_name %></a></td>
                                <td><%= playersOpenToTrade[i].rating_ovr %></td>
                                <td><%= playersOpenToTrade[i].team_name %></td>
                                <td><%= playersOpenToTrade[i].annual_salary %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</body>
</html>