<%- include('header') -%>

<%- include('links') -%>

<body class="bodyStyle">
    <h1>Match Sim</h1>
    <div class="row justify-content-center">
        <div class="col-4 text-center">
            <% if (isNextMatchIncludeChosenTeam) { %>
                <div class="chosenTeamHighlight">
            <% } else { %>
                <div>
            <% } %>
                <img src="/images/<%= nextMatchDetails[0].team1_image_filename %>" width="200" height="200">
                <p class="matchSimTeamName"><%= nextMatchDetails[0].team1_name %></p>
                <p>Rating: <%= nextMatchDetails[0].team1_rating %></p>
                <p>Record: <%= team1OverallPosition[0].wins %>-<%= team1OverallPosition[0].losses %></p>
                <p>Position: <%= team1OverallPosition[0].pos %></p>
            </div>
        </div>
        <div class="col-4 text-center">
            <% if (isNextMatchIncludeChosenTeam) { %>
                <div class="chosenTeamHighlight">
            <% } else { %>
                <div>
            <% } %>
                <img src="/images/<%= nextMatchDetails[0].team2_image_filename %>" width="200" height="200">
                <p class="matchSimTeamName"><%= nextMatchDetails[0].team2_name %></p>
                <p>Rating: <%= nextMatchDetails[0].team2_rating %></p>
                <p>Record: <%= team2OverallPosition[0].wins %>-<%= team2OverallPosition[0].losses %></p>
                <p>Position: <%= team2OverallPosition[0].pos %></p>
            </div>
        </div>

    </div>
    <div class="row justify-content-center">
        <div class="col-4 text-center">
            <form class="" action="/match_sim_result" method="post" name="matchSimForm" id="matchSimForm">
                <button type="submit" id="sim_match" name="sim_match" value="sim" class="btn btn-primary btn-block mainButton">
                    Simulate Match
                </button>
                <input type="hidden" name="matchResultID" value="<%= nextMatchDetails[0].match_result_id %>" />
                <input type="hidden" name="team1ID" value="<%= nextMatchDetails[0].team1_id %>" />
                <input type="hidden" name="team2ID" value="<%= nextMatchDetails[0].team2_id %>" />
                <input type="hidden" name="team1Rating" value="<%= nextMatchDetails[0].team1_rating %>" />
                <input type="hidden" name="team2Rating" value="<%= nextMatchDetails[0].team2_rating %>" />
            
            </form>
        </div>

        
    </div>

    <div class="row justify-content-center">
        <div class="col-8">  

            <% if (resultOfInsert == true) { %>
                <p>Match result saved.</p>
                <p><%= winningTeamName %> defeated <%= losingTeamName %>: <%= winningTeamScore %>-<%= losingTeamScore %></p>
                <br />
            <% } %>
        </div>
    </div>


</body>
</html>